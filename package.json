{
	"name": "yhdl",
	"version": "1.4.0",
	"description": "Standalone music download tool with intelligent folder management",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"bin": {
		"yhdl": "./src/main.ts"
	},
	"scripts": {
		"dev": "bun run src/main.ts",
		"build": "bun build src/main.ts --outfile dist/main.js --target bun && bun build src/index.ts --outfile dist/index.js --target bun",
		"start": "bun run dist/main.js",
		"sync": "bun run src/cli/sync.ts",
		"sync:scheduled": "bun run src/cli/scheduled-sync.ts",
		"cache:clear": "bun run src/cli/cache.ts",
		"tag:existing": "bun run src/cli/tag-existing.ts",
		"ignore:add": "bun run scripts/manage-ignored-artists.js add",
		"ignore:remove": "bun run scripts/manage-ignored-artists.js remove",
		"ignore:list": "bun run scripts/manage-ignored-artists.js list",
		"ignore:clear": "bun run scripts/manage-ignored-artists.js clear",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"version:patch": "node scripts/bump-version.js patch",
		"version:minor": "node scripts/bump-version.js minor",
		"version:major": "node scripts/bump-version.js major",
		"version:auto": "node scripts/bump-version.js auto"
	},
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./cli": {
			"import": "./src/main.ts",
			"types": "./src/main.ts"
		}
	},
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/YOUR_USERNAME/yhdl.git"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"files": [
		"src/",
		"dist/",
		"README.md",
		"RELEASE_NOTES.md"
	],
	"dependencies": {
		"cli-progress": "^3.12.0",
		"commander": "^12.1.0",
		"flac-metadata": "^0.1.1",
		"got": "^14.4.5",
		"music-metadata": "^11.10.3",
		"node-id3": "^0.2.6",
		"ora": "^9.0.0",
		"picocolors": "^1.1.1",
		"tough-cookie": "^5.1.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "latest",
		"@types/cli-progress": "^3.11.6",
		"@types/node": "^22.15.0",
		"@types/tough-cookie": "^4.0.5",
		"typescript": "^5.9.2"
	}
}
